# Sphere AI Clone - Environment Configuration
# Copy this file to .env.local and add your actual API keys

# =============================================================================
# AI/LLM API KEYS
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini API Configuration  
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro

# =============================================================================
# SPEECH & AUDIO API KEYS
# =============================================================================

# OpenAI Whisper API (for speech-to-text)
OPENAI_WHISPER_API_KEY=your_openai_api_key_here

# Google Speech-to-Text API
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here
GOOGLE_SPEECH_PROJECT_ID=your_google_project_id_here

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=3001
FLASK_HOST=0.0.0.0

# Frontend Configuration
VITE_PORT=8080
VITE_API_BASE_URL=http://localhost:3001

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================

# Audio Recording Settings
MAX_RECORDING_DURATION=300
AUDIO_CHUNK_SIZE=1024
AUDIO_SAMPLE_RATE=16000
AUDIO_FORMAT=mp3

# Storage Configuration
RECORDINGS_DIR=recordings
MAX_FILE_SIZE=100MB
CLEANUP_AFTER_DAYS=30

# =============================================================================
# SECURITY & CORS
# =============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug and Logging
LOG_LEVEL=DEBUG
ENABLE_DETAILED_LOGGING=true
ENABLE_AUDIO_DEBUG=true

# Development Mode
DEV_MODE=true
ENABLE_MOCK_APIS=false
